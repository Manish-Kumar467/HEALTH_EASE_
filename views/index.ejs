/* Initial styling for the cards with fade-in effect */
.cards-container .card {
  opacity: 0; /* Hidden initially */
  transform: translateY(50px); /* Slide up from below */
  transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

.cards-container .card.visible {
  opacity: 1; /* Fully visible when scrolled into view */
  transform: translateY(0); /* Position to original place */
}

/* Individual card styling */
.card {
  background: radial-gradient(circle, #d0f7d4, #a8e6e0);
  border-radius: 8px;
  width: 30%;
  padding: 20px;
