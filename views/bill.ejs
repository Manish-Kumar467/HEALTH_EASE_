<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Billing</title>
    <style>
        body {
            background: radial-gradient(circle, #d0f7d4, #a8e6e0);
            font-family: Arial, sans-serif;
        }

        h1, h2 {
            text-align: center;
            color: #073809;
        }

        form {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: bold;
            display: block;
            margin-top: 15px;
        }

        input, select, button {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #073809;
            color: white;
        }

        button {
            background-color: #073809;
            color: white;
            cursor: pointer;
        }

        button:hover {
            background-color: #065d08;
        }

        #summary {
            margin-top: 20px;
        }

        .total {
            font-size: 20px;
            font-weight: bold;
            text-align: right;
            color: #073809;
        }

        .bill-summary {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .bill-summary h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        .bill-summary table {
            width: 100%;
            margin-bottom: 20px;
        }

        .bill-summary th, .bill-summary td {
            text-align: left;
            padding: 8px;
            border: 1px solid #ddd;
        }

        .bill-summary th {
            background-color: #073809;
            color: white;
        }

        .bill-summary td {
            background-color: #f9f9f9;
        }

        .bill-summary .total {
            font-size: 22px;
            font-weight: bold;
            text-align: right;
            color: #073809;
            border-top: 2px solid #073809;
            padding-top: 10px;
        }

        .signature {
            margin-top: 30px;
            text-align: center;
            font-style: italic;
        }

        #printButton {
            width: auto;
            padding: 8px 16px;
            margin: 0 auto;
            display: block;
        }

        .contact-info {
            margin-top: 20px;
            font-size: 14px;
            text-align: center;
        }

        @media print {
            body {
                background: white;
            }
            #billingForm, #summary, h1, h2 {
                display: none;
            }
            .bill-summary {
                width: 100%;
                padding: 10px;
            }
            .bill-summary table, .bill-summary th, .bill-summary td {
                border: 1px solid #000;
            }
            .bill-summary h1 {
                font-size: 30px;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <h1>HopeHeart Medical Clinic</h1>
    <h2>Billing Page</h2>
    <form id="billingForm">
        <label for="patientName">Patient Name</label>
        <input type="text" id="patientName" placeholder="Enter patient's name" required>

        <label for="doctorName">Doctor's Name</label>
        <input type="text" id="doctorName" placeholder="Enter doctor's name" required>

        <label for="hoursStayed">Number of Hours Stayed</label>
        <input type="number" id="hoursStayed" placeholder="Enter hours stayed" required>

        <label for="roomType">Room Type</label>
        <select id="roomType" required>
            <option value="general">General Ward ($50/hour)</option>
            <option value="semi-private">Semi-Private ($100/hour)</option>
            <option value="private">Private ($200/hour)</option>
        </select>

        <label for="prescriptions">Medications and Prescriptions</label>
        <table id="prescriptionTable">
            <thead>
                <tr>
                    <th>Medicine Name</th>
                    <th>Cost ($)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="text" placeholder="Medicine name"></td>
                    <td><input type="number" placeholder="Cost" step="0.01"></td>
                    <td><button type="button" class="removeRow">Remove</button></td>
                </tr>
            </tbody>
        </table>
        <button type="button" id="addPrescription">Add Medicine</button>

        <button type="button" id="generateBill">Generate Bill</button>
    </form>

    <div id="summary">
        <h2>Bill Summary</h2>
        <div id="summaryContent"></div>
        <button id="printButton">Print Bill</button>
    </div>

    <script>
        const rates = {
            "general": 50,
            "semi-private": 100,
            "private": 200
        };

        const addPrescriptionBtn = document.getElementById('addPrescription');
        const prescriptionTable = document.getElementById('prescriptionTable').getElementsByTagName('tbody')[0];

        // Add a new row to the prescriptions table
        addPrescriptionBtn.addEventListener('click', () => {
            const row = prescriptionTable.insertRow();
            row.innerHTML = `
                <td><input type="text" placeholder="Medicine name"></td>
                <td><input type="number" placeholder="Cost" step="0.01"></td>
                <td><button type="button" class="removeRow">Remove</button></td>
            `;
        });

        // Remove a prescription row
        prescriptionTable.addEventListener('click', (event) => {
            if (event.target.classList.contains('removeRow')) {
                const row = event.target.closest('tr');
                row.remove();
            }
        });

        // Generate bill
        document.getElementById('generateBill').addEventListener('click', () => {
            const patientName = document.getElementById('patientName').value;
            const doctorName = document.getElementById('doctorName').value;
            const hoursStayed = +document.getElementById('hoursStayed').value || 0;
            const roomType = document.getElementById('roomType').value;

            // Calculate room cost
            const roomCost = hoursStayed * rates[roomType];

            // Calculate medication cost
            let medicationCost = 0;
            const rows = prescriptionTable.getElementsByTagName('tr');
            Array.from(rows).forEach(row => {
                const costInput = row.cells[1].getElementsByTagName('input')[0];
                const cost = parseFloat(costInput.value);
                if (!isNaN(cost)) medicationCost += cost;
            });

            const totalAmount = roomCost + medicationCost;

            // Update bill summary
            const summaryContent = `
                <div class="bill-summary">
                    <h1>Bill</h1>
                    <h3>HopeHeart Medical Clinic</h3>
                    <p style="text-align: center;">123 Hospital St, Health City, HC 12345</p>
                    <p><strong>Patient Name:</strong> ${patientName}</p>
                    <p><strong>Doctor's Name:</strong> ${doctorName}</p>
                    <p><strong>Hours Stayed:</strong> ${hoursStayed} hours</p>
                    <p><strong>Room Type:</strong> ${roomType} ($${rates[roomType]}/hour)</p>
                    <p><strong>Room Charges:</strong> $${roomCost.toFixed(2)}</p>
                    <p><strong>Medications Cost:</strong> $${medicationCost.toFixed(2)}</p>
                    <p><strong>Date & Time:</strong> ${new Date().toLocaleString()}</p>
                    <p class="total"><strong>Total Amount:</strong> $${totalAmount.toFixed(2)}</p>
                    <div class="signature">
                        <p>Authorized Signature</p>
                    </div>
                    <div class="contact-info">
                        <p>Email: info@xyzhospital.com | Contact: (123) 456-7890</p>
                    </div>
                </div>
            `;
            document.getElementById('summaryContent').innerHTML = summaryContent;
            document.getElementById('summary').style.display = 'block';
        });

        // Print bill
        document.getElementById('printButton').addEventListener('click', () => {
            window.print();
        });
    </script>
</body>
</html>
