    <script>
        // Function to gather selected symptoms from all dropdowns
    function updateSelectedSymptoms() {
        // Get all dropdown elements
        const dropdowns = document.querySelectorAll('.dropdown');
        const symptomsList = document.getElementById('symptomsList');
        
        // Clear the current list
        symptomsList.innerHTML = '';

        // Loop through each dropdown and gather selected options
        dropdowns.forEach(dropdown => {
            Array.from(dropdown.selectedOptions).forEach(option => {
                const listItem = document.createElement('li');
                listItem.textContent = option.textContent; // Display symptom name
                symptomsList.appendChild(listItem);
            });
        });
    }

    // Attach event listeners to each dropdown
    document.querySelectorAll('.dropdown').forEach(dropdown => {
        dropdown.addEventListener('change', updateSelectedSymptoms);
    });

